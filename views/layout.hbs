  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <nav>
    <ul class="nav justify-content-center ml-auto">
      {{#if isConnected}}
      <li class="nav-item">
        <a class="nav-link" href="/classroom">{{toUpperCase firstName}}</a>
      </li>
      {{/if}}
      <li class="nav-item">
        <a href="/"><img src="/images/logo-ironhack.png" width="40px"></a>
      </li>
      {{!-- <li class="nav-item">
        <a class="nav-link active" href="/">Home</a>
      </li> --}}
      {{#if isNotConnected}}
      <li class="nav-item">
        <a class="nav-link active" href="/auth/login"><i class="far fa-user"></i> Login</a>
      </li>
      {{/if}}
      {{#if isConnected}}
      {{#if isTA}}
      <li class="nav-item">
        <a class="nav-link active" href="/classes/">Classes</a>
      </li>
      {{/if}}
      <li class="nav-item">
        <a class="nav-link" href="/classroom/">Classroom</a>
      </li>
      {{#if isAdmin}}
      <li class="nav-item">
        <a class="nav-link" href="/auth/admin">Admin</a>
      </li>
      {{/if}}
      <li class="nav-item">
        <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </li>
      {{/if}}
    </ul>

  </nav>

  {{{body}}}

  <footer class="d-none d-xl-block">
    <div class="d-flex justify-content-between">
      <div id="people-online" class="footer-copyright">
      </div>
      <div class="footer-copyright">
        <a href="https://github.com/ironclass/ironclass"> by Andr√© Sebastian & Malte Felmy</a>
      </div>
    </div>
  </footer>

  {{!-- SOCKET.IO --}}
