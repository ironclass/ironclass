<h1>Edit Student {{user.firstName}} {{user.lastName}}</h1>

<form action="/classes/student/edit/{{user._id}}" method="POST">
    <div class="form-row">
      <div class="col">
        <input name="firstName" type="text" class="form-control" value="{{user.firstName}}">
      </div>
      <div class="col">
        <input name="lastName" type="text" class="form-control" value="{{user.lastName}}">
      </div>
      <div class="col">
        <input id="datefield" name="birthday" type="date" class="form-control" min="1930-01-01" max="2000-01-01" value="{{birthday}}">
      </div>
      <div class="col">
        <select name="role" class="form-control">
          <option value="Student" selected >Student</option>
          <option value="TA">TA</option>
          <option value="Teacher">Teacher</option>
        </select>
      </div>
      <button id="btn_addStudent" type="submit" class="btn btn-primary">Change</button>
    </div>
  </form>

{{#if message }}
  <div class="error-message">{{ message }}</div>
{{/if}}
