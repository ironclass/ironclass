<div class="container d-flex flex-column">
  <div class="jumbotron container d-flex flex-column align-items-center">

    <h1>Edit: {{user.firstName}} {{user.lastName}}</h1>

    <form action="/users/user/edit/{{user._id}}" method="POST" enctype="multipart/form-data">
      <div class="form-row">
        <div class="col-sm-6 col-m-5 col-lg-3">
          <input name="firstName" type="text" class="form-control" value="{{user.firstName}}">
        </div>
        <div class="col-sm-6 col-m-5 col-lg-3">
          <input name="lastName" type="text" class="form-control" value="{{user.lastName}}">
        </div>
        <div class="col">
          <input id="datefield" name="birthday" type="date" class="form-control" min="1930-01-01" max="2000-01-01" value="{{birthday}}">
        </div>
        <div class="col">
          <select name="role" class="form-control">
            {{#select user.role}}
              <option value="Student">Student</option>
              <option value="TA">TA</option>
              <option value="Teacher">Teacher</option>
            {{/select}}
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-10">
          <div class="col custom-file" id="customFile" lang="de">
            <input type="file" name="photo" class="custom-file-input" id="exampleInputFile" aria-describedby="fileHelp">
            <label class="custom-file-label" for="exampleInputFile">
              Select file...
            </label>
         </div>  
       </div>
        <button id="btn_addStudent" type="submit" class="btn btn-primary">Change</button>
      </div>
    </form>
  </div>

    <div class="container">
      {{#if success }}
      <div class="alert alert-success alert-dismissible success-message" role="alert">{{success}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{/if}}
      {{#if error }}
      <div class="alert alert-warning alert-dismissible error-message" role="alert">{{error}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{/if}}
    </div>

</div>


<script src="/javascripts/setDate.js"></script>
