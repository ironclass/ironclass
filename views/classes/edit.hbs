<div class="container d-flex flex-column">

  {{!-- Edit Class --}}
  <div id="jumbo" class="jumbotron container d-flex flex-column align-items-center">
    <h1>Edit Class</h1>
    <form action="/classes/edit/{{oneClass._id}}" method="POST">
      <div class="form-group row justify-content-center">
        <input type="text" name="name" class="form-control" id="classname" value="{{oneClass.name}}">
        <input type="password" name="password" class="form-control" id="password" placeholder="Leave blank if you want to keep the current password.">
        <select name="city" class="form-control form-control-lg" value="Munich">
          <option selected hidden>{{oneClass.city}}</option>  
          <option value="Barcelona">Barcelona</option>
          <option value="Amsterdam">Amsterdam</option>
          <option value="Berlin">Berlin</option>
          <option value="Bogotá">Bogotá</option>
          <option value="Lisbon">Lisbon</option>
          <option value="Madrid">Madrid</option>
          <option value="Mexico City">Mexico City</option>
          <option value="Miami">Miami</option>
          <option value="Munich">Munich</option>
          <option value="Paris">Paris</option>
          <option value="São Paulo">São Paulo</option>
        </select>
        <button type="submit" class="btn btn-lg btn-primary">Change</button>
      </div>
    </form>
  </div>

{{!-- Add Student --}}
  <div id="add-student" class="container d-flex flex-wrap flex-column align-items-center">
    <h3>Add a student to this class</h3>
    <form action="/users/createStudent/{{oneClass._id}}" class="flex-wrap" method="POST" enctype="multipart/form-data">
        <div class="row">
          <div class="col">
            <input name="firstName" type="text" class="form-control" placeholder="First name">
          </div>
          <div class="col">
            <input name="lastName" type="text" class="form-control" placeholder="Last name">
          </div>
          <div class="col">
            <input id="datefield" name="birthday" type="date" class="form-control" min="1930-01-01" max="2000-01-01" placeholder="Birthday">
          </div>
          <div class="col">
            <select name="role" class="form-control" value="Student">
              <option value="Student">Student</option>
              <option value="TA">TA</option>
              <option value="Teacher">Teacher</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col custom-file" id="customFile" lang="de">
            <input type="file" name="photo" class="custom-file-input" id="exampleInputFile" aria-describedby="fileHelp">
            <label class="custom-file-label" for="exampleInputFile">
              Select file...
            </label>
          </div>  
          <div class="col">
            <button id="btn_addStudent" type="submit" class="btn btn-primary" value="SAVE"><i class="fas fa-user-plus"></i>  Add Student</button>
          </div>
        </div>    
    </form>
  </div>
  

  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

<div id="studentslist" class="jumbotron container d-flex flex-column align-items-center">

  <div  class="container">
    <h4><strong>Members of {{oneClass.name}}</strong></h4>
    <br>
    {{#each students}}
    <table class="table">
      <div class="row">
        <div class="col">
          <span><strong>{{firstName}}</strong></span>
        </div>
        <div class="col">
          <span>{{lastName}}</span>
        </div>
        <div class="col">
          <a href="/users/user/edit/{{_id}}"><button class="btn btn-warning"><i class="far fa-edit"></i>  Edit</button></a>   
        </div>
        <div class="col">
          <a href="/users/delete/user/{{_id}}"><button class="btn btn-danger"><i class="far fa-trash-alt"></i>  Delete</button></a>
        </div>
      </div>
    </table>
    {{/each }}
  </div>
</div>
